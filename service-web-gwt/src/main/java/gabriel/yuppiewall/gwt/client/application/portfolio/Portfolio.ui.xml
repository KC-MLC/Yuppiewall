<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateLocales='default'
	xmlns:p1="urn:import:gabriel.yuppiewall.gwt.client.application.portfolio">

	<ui:style>
		.button-link {
			cursor: pointer;
			cursor: hand;
			border: none;
			/* Disable the button-style */
			background-color: transparent;
			padding: 0px;
			color: #4784C3;
			text-decoration: underline;
		}
	</ui:style>

	<g:SplitLayoutPanel width="100%" height="100%"
		ui:field='mainLayoutPanel'>

		<g:west size='128'>
			<g:SplitLayoutPanel>

				<g:north size='128'>
					<g:VerticalPanel width="100%" ui:field="vLytAccount">

						<g:HorizontalPanel width="100%">
							<g:cell horizontalAlignment="ALIGN_LEFT">
								<g:Label>Account</g:Label>
							</g:cell>
							<g:cell horizontalAlignment="ALIGN_RIGHT">
								<g:HorizontalPanel>
									<g:Button styleName="{style.button-link}" ui:field="btAddAccount">add</g:Button>
									<g:Button styleName="{style.button-link}">manage</g:Button>
								</g:HorizontalPanel>
							</g:cell>


						</g:HorizontalPanel>
					</g:VerticalPanel>
				</g:north>

				<g:north size='128'>
					<g:SimplePanel>
						<g:Label>WatchList</g:Label>
					</g:SimplePanel>
				</g:north>
				<g:center>
					<g:SimplePanel>
						<g:Label>news</g:Label>
					</g:SimplePanel>
				</g:center>
			</g:SplitLayoutPanel>
		</g:west>

		<g:north size='128'>
			<g:SimpleLayoutPanel ui:field="portfolioView">
				<p1:PortfolioView width="100%" height="100%" />

			</g:SimpleLayoutPanel>
		</g:north>
		<g:center>
			<g:SimplePanel>
				<g:Label>Investment section</g:Label>
			</g:SimplePanel>
		</g:center>
	</g:SplitLayoutPanel>


</ui:UiBinder> 
