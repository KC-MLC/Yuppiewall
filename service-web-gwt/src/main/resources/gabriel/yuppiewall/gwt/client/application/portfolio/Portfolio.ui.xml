<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateLocales='default'
	xmlns:p1="urn:import:gabriel.yuppiewall.gwt.client.application.portfolio">

	<ui:style>
		.button-link {
			cursor: pointer;
			cursor: hand;
			border: none;
			/* Disable the button-style */
			background-color: transparent;
			padding: 0px;
			color: #4784C3;
			text-decoration: underline;
		}
	</ui:style>
	<g:DockLayoutPanel unit='EM' >
		<g:west size='18'>
			<g:DockLayoutPanel unit='PCT'>
				<g:north size="50">
					<g:StackLayoutPanel unit='EM'>
						<g:stack>
							<g:header size='2'>
								<b>ACCOUNT</b>
								Summary
							</g:header>
							<g:HeaderPanel>
								<g:HorizontalPanel width="100%">
									<g:cell horizontalAlignment="ALIGN_LEFT">
										<g:Label>Account</g:Label>
									</g:cell>
									<g:cell horizontalAlignment="ALIGN_RIGHT">
										<g:HorizontalPanel>
											<g:Button styleName="{style.button-link}" ui:field="btAddAccount">add</g:Button>
											<g:Button styleName="{style.button-link}">manage</g:Button>
										</g:HorizontalPanel>
									</g:cell>
								</g:HorizontalPanel>
								<g:ScrollPanel width="100%" height="100%">
									<g:VerticalPanel width="100%" ui:field="vLytAccount" />
								</g:ScrollPanel>
							</g:HeaderPanel>
						</g:stack>
						<g:stack>
							<g:header size='2'>
								<b>WATCH</b>
								List
							</g:header>
							<g:Label>Some List</g:Label>
						</g:stack>
					</g:StackLayoutPanel>
				</g:north>
				<g:center>
					<g:Label>news</g:Label>
				</g:center>
			</g:DockLayoutPanel>
		</g:west>
		<g:north size='3'>
			<g:HorizontalPanel spacing="10">
				<g:Label>Select Group Or Portfolio</g:Label>
				<g:ListBox ui:field="lbGroupSelection" width="10em"></g:ListBox>
			</g:HorizontalPanel>
		</g:north>
		<g:center>
			<p1:PortfolioView width="100%" height="100%" />
		</g:center>
	</g:DockLayoutPanel>

