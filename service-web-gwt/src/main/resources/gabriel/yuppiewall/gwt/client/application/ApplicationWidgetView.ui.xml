<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style
		type="gabriel.yuppiewall.gwt.client.application.ApplicationWidgetView.ApplicationWidgetViewCSS">
			.name {
				color: #4B4A4A;
				font-size: 12pt;
				font-weight: bold;
				margin: 10px 10px 0px;
			}
			
			.applicationPanelStyle {
				margin-top: 5px;
				margin-bottom: 5px;
				margin-right: 5px;
				border: 3px solid green;
			}
			}
		</ui:style>

	<g:HeaderPanel>
		<!-- Header. -->
		<g:HTMLPanel>
			<div class='{style.name}' ui:field='nameElem'>Name</div>
		</g:HTMLPanel>

		<!-- Content. -->
		<g:SimpleLayoutPanel ui:field='applicationPanel' />
	</g:HeaderPanel>

</ui:UiBinder> 